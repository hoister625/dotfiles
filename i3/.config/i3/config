bindsym $mod+period exec --no-startup-id cmus-remote --next
bindsym $mod+comma exec --no-startup-id cmus-remote --prev
bindsym $mod+p exec --no-startup-id cmus-remote --pause

# take screenshot of current focused window and store in the image folder
bindsym --release $mod+Insert exec scrot -u -e 'mv $f ~/Изображения/shots/'

# key indicators
